<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="com.suzhou.concept.bean.YoungSentenceItem" />
<!--        <variable-->
<!--            name="currentTime"-->
<!--            type="String" />-->
<!--        <variable-->
<!--            name="sumTime"-->
<!--            type="String" />-->
<!--        <variable-->
<!--            name="current_progress"-->
<!--            type="Integer" />-->
<!--        <variable-->
<!--            name="max_progress"-->
<!--            type="Integer" />-->
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/standard_title"/>

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/dub_player"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dub_list"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/dub_info_item" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/short_interval"
            app:cardCornerRadius="@dimen/standard_interval"
            app:cardElevation="@dimen/standard_interval">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:background="@drawable/bg_link_line_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_interval"
                    android:layout_marginTop="@dimen/short_interval"
                    android:layout_marginBottom="@dimen/short_interval"
                    android:text='@{item.sentence,default="请选择句子"}'
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_interval"
                    android:layout_marginTop="@dimen/short_interval"
                    android:layout_marginBottom="@dimen/short_interval"
                    android:text='@{item.sentence_cn,default="请选择句子"}' />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_interval"
                    android:layout_marginTop="@dimen/short_interval"
                    android:layout_marginBottom="@dimen/short_interval"
                    android:text='@{item.sentenceDuration(),default="请选择句子"}' />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/current_time_tv"
                        android:layout_margin="@dimen/short_interval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ProgressBar
                        android:id="@+id/voice_seek"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/sum_time_tv"
                        android:layout_margin="@dimen/short_interval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <ImageView
                        android:id="@+id/play_speaking"
                        android:visibility="@{item.success? View.VISIBLE :View.INVISIBLE}"
                        android:layout_margin="@dimen/short_interval"
                        style="@style/fine_listen_img_style"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/start" />

                    <ImageView
                        android:id="@+id/start_record_speaking"
                        android:layout_margin="@dimen/short_interval"
                        style="@style/fine_listen_img_style"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/mike_grey" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>