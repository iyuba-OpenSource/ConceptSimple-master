<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.suzhou.concept.bean.YoungRankItem" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_centerVertical="true"
            android:padding="@dimen/short_interval"
            android:id="@+id/speaking_item_index"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:gravity="center" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/speaking_item_head"
            loadUrl="@{item.imgSrc}"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/speaking_item_index" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/speaking_item_layout"
            android:layout_toEndOf="@id/speaking_item_head"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/speaking_item_name"
                android:gravity="center_vertical"
                android:text="@{item.userName}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/speaking_item_time"
                android:gravity="center_vertical"
                android:text="@{item.createDate}"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/speaking_item_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/standard_interval"
            android:layout_marginTop="@dimen/standard_interval"
            android:layout_marginEnd="@dimen/standard_interval"
            android:layout_marginBottom="@dimen/standard_interval"
            android:layout_toStartOf="@id/speaking_item_like"
            android:gravity="center"
            android:text="@{item.score}"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/speaking_item_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/standard_interval"
            android:layout_marginTop="@dimen/standard_interval"
            android:layout_marginEnd="@dimen/standard_interval"
            android:layout_marginBottom="@dimen/standard_interval"
            android:gravity="center"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:text="@{item.agreeCount}"
            app:drawableStartCompat="@drawable/awesome" />
    </RelativeLayout>
</layout>