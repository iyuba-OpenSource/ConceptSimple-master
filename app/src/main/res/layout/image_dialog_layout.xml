<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/photo_choose"
            android:background="@drawable/btn_common"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/short_interval"
            android:layout_marginTop="@dimen/short_interval"
            android:text="@string/album_selection"
            android:textColor="#f9f9f9" />

        <Button
            android:id="@+id/photograph"
            android:background="@drawable/btn_common"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/short_interval"
            android:layout_marginTop="@dimen/short_interval"
            android:text="@string/photograph"
            android:textColor="#f9f9f9" />


    </LinearLayout>
</layout>