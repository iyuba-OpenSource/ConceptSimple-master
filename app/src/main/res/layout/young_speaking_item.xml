<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.suzhou.concept.bean.MineReleaseItem" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/short_interval"
        app:cardCornerRadius="@dimen/standard_interval"
        app:cardElevation="@dimen/standard_interval">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/image"
                loadUrl="@{item.pic}"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/todo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/title"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{item.title_cn}"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"

                app:layout_constraintLeft_toRightOf="@id/image"
                app:layout_constraintRight_toLeftOf="@id/check"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/agreeImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/awesome"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"

                app:layout_constraintLeft_toLeftOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/title"/>

            <TextView
                android:id="@+id/agreeText"
                android:text="@{String.valueOf(item.agreeCount)}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                app:layout_constraintLeft_toRightOf="@id/agreeImage"
                app:layout_constraintTop_toTopOf="@id/agreeImage"
                app:layout_constraintBottom_toBottomOf="@id/agreeImage"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@{item.createDate}"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"

                app:layout_constraintLeft_toLeftOf="@id/title"
                app:layout_constraintRight_toRightOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/agreeImage"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <!--选中按钮-->
            <ImageView
                android:id="@+id/check"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_unseelct"
                android:layout_marginEnd="10dp"
                android:visibility="gone"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>