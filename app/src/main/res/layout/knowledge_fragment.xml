<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--数据显示-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                tools:listitem="@layout/knowledge_item"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/knowledge_list"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <!--训练功能-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/knowledge_train"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--加载显示-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/knowledge_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="false"
            android:gravity="center"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/knowledge_progress"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/knowledge_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:gravity="center"/>
            <Button
                android:id="@+id/knowledge_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="再试一次"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
</layout>