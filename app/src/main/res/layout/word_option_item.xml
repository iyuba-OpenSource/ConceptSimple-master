<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.suzhou.concept.bean.WordOptions" />
    </data>

    <LinearLayout
        android:layout_margin="@dimen/standard_interval"
        judgeLayoutBackGround="@{item.complete}"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@{item.realUnitId()}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/standard_text"
            android:padding="@dimen/standard_interval"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@{item.schedule}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>