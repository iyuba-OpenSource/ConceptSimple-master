<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/article_title"
            layout="@layout/standard_title" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/new_concept_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_title"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/standard_interval"
            android:layout_marginTop="@dimen/standard_interval"
            android:layout_marginEnd="@dimen/standard_interval"
            android:layout_marginBottom="@dimen/standard_interval"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/sentence_item_layout_huawei" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/backstage_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_black_round_10dp"
            android:orientation="horizontal"
            android:padding="@dimen/standard_interval"
            android:stateListAnimator="@null"
            android:visibility="invisible"
            tools:visibility="visible">

            <TextView
                android:id="@+id/backstage_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/default_video_desc" />

            <ImageView
                android:id="@+id/backstage_control"
                style="@style/fine_listen_img_style"
                android:contentDescription="@string/todo"
                android:src="@drawable/start" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>


</layout>