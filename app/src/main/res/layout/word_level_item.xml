<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.suzhou.concept.bean.WordItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_margin="@dimen/standard_interval"
                android:id="@+id/play_word"
                android:src="@drawable/video"
                style="@style/fine_listen_img_style"
                android:contentDescription="@string/todo" />
            <TextView
                android:layout_margin="@dimen/standard_interval"
                android:textSize="@dimen/standard_text"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@{item.word}"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/collect"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_collect_no"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginStart="@dimen/standard_interval"
            android:text="@{item.realPron}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="@dimen/standard_interval"
            android:textSize="@dimen/standard_text"
            android:textStyle="bold"
            android:text="@{item.def}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>