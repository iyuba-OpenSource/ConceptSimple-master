    <!--新的界面样式-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <!--上边-->
        <TextView
            android:id="@+id/sentence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:text="@{item.showSentence}"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/evaluation_type"
            />
        <TextView
            android:id="@+id/sentenceCn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="@{item.showSentenceCn}"

            app:layout_constraintLeft_toLeftOf="@id/sentence"
            app:layout_constraintRight_toRightOf="@id/sentence"
            app:layout_constraintTop_toBottomOf="@id/sentence"/>
        <TextView
            android:id="@+id/evaluation_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"
            android:text="@{item.realType}"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/sentence"
            app:layout_constraintBottom_toBottomOf="@id/sentenceCn"/>

        <!--下边-->
        <ImageView
            android:id="@+id/play_evaluation"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/video"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/score_evaluation"
            app:layout_constraintBottom_toBottomOf="@id/score_evaluation"/>
        <ImageView
            android:id="@+id/likeImg_evaluation"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/awesome"

            app:layout_constraintLeft_toRightOf="@id/play_evaluation"
            app:layout_constraintRight_toLeftOf="@id/score_evaluation"
            app:layout_constraintTop_toTopOf="@id/score_evaluation"
            app:layout_constraintBottom_toBottomOf="@id/score_evaluation"/>
        <TextView
            android:id="@+id/like_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:text="@{String.valueOf(item.agreeCount)}"

            app:layout_constraintLeft_toRightOf="@id/likeImg_evaluation"
            app:layout_constraintTop_toTopOf="@id/likeImg_evaluation"
            app:layout_constraintBottom_toBottomOf="@id/likeImg_evaluation"/>
        <TextView
            android:id="@+id/score_evaluation"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="@{String.valueOf(item.score)}"
            android:background="@drawable/round_border"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sentenceCn"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>