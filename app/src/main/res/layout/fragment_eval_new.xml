<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--主界面-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--界面-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:overScrollMode="never"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/playLayout"
            android:layout_marginBottom="5dp"
            />
        <!--播放-->
        <LinearLayout
            android:id="@+id/playLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomLayout"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/playTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="00:00"/>
            <SeekBar
                android:id="@+id/playProgress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
            <TextView
                android:id="@+id/totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="00:00" />
        </LinearLayout>
        <!--合成-->
        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="5dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <Button
                android:id="@+id/button_marge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合成"
                android:textColor="@color/white"
                android:background="@drawable/shape_corner_theme_10dp"
                android:layout_marginStart="15dp" />
            <RelativeLayout
                android:id="@+id/bottom_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/border_layout"
                >
                <ImageView
                    android:id="@+id/playView"
                    style="@style/fine_listen_img_style"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/standard_interval"
                    android:layout_marginEnd="@dimen/standard_interval"
                    android:src="@drawable/play_evaluation_old"
                    android:contentDescription="@string/todo" />
                <TextView
                    android:id="@+id/scoreView"
                    android:layout_width="@dimen/evaluation_rang"
                    android:layout_height="@dimen/evaluation_rang"
                    android:layout_marginStart="@dimen/short_interval"
                    android:layout_marginTop="@dimen/short_interval"
                    android:layout_marginEnd="@dimen/short_interval"
                    android:layout_marginBottom="@dimen/short_interval"
                    android:layout_toEndOf="@id/playView"
                    android:background="@drawable/round_border"
                    android:gravity="center" />
                <ImageView
                    android:id="@+id/publishView"
                    android:layout_width="@dimen/evaluation_rang"
                    android:layout_height="@dimen/evaluation_rang"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/standard_interval"
                    android:layout_marginEnd="@dimen/standard_interval"
                    android:layout_toEndOf="@id/scoreView"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/release_merge" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--加载显示-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/eval_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="false"
        android:gravity="center"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/eval_progress"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/eval_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/eval_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再试一次"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>