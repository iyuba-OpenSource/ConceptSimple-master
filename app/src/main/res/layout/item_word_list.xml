<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/wordView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        android:hint="单词"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/collectView"/>
    <ImageView
        android:id="@+id/collectView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_collect_no"
        android:scaleType="fitXY"

        app:layout_constraintTop_toTopOf="@id/wordView"
        app:layout_constraintBottom_toBottomOf="@id/wordView"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/playView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:src="@drawable/video"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collectView"
        />
    <TextView
        android:id="@+id/pornView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="10dp"
        android:hint="音标"

        app:layout_constraintTop_toTopOf="@id/playView"
        app:layout_constraintBottom_toBottomOf="@id/playView"
        app:layout_constraintLeft_toRightOf="@id/playView"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/defView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:hint="释义"
        android:lineSpacingExtra="5dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playView"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>